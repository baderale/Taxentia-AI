# OpenAI Configuration
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_NAME=taxentia-authorities

# PostgreSQL Configuration
DATABASE_URL=postgresql+asyncpg://taxentia:password@localhost:5432/taxentia

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Ingestion Settings
BATCH_SIZE_EMBEDDINGS=40
BATCH_SIZE_QDRANT=100
MAX_CHUNK_SIZE=2000
CHUNK_OVERLAP=200

# Timeouts
HTTP_TIMEOUT=120
QDRANT_TIMEOUT=60

# Rate Limiting (for IRS.gov)
IRB_REQUEST_DELAY_MIN=1.0
IRB_REQUEST_DELAY_MAX=2.0

# Checkpointing
CHECKPOINT_DIR=data/checkpoints
CHECKPOINT_INTERVAL=10
